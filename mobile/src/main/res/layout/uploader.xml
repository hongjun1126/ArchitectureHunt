<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uploader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">




    <ImageView
        android:id="@+id/flickrIcon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/titleText"
        android:src="@drawable/flickrrr" />

    <EditText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/desText"
        android:layout_toRightOf="@id/titleText"
        android:maxLength="30"
        android:textSize="15dp"
        android:typeface="serif"
        android:layout_marginBottom="11dp"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/desText"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:typeface="serif"
        android:text="Title: "/>

    <EditText
        android:id="@+id/desEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_marginBottom="12dp"
        android:maxLength="25"
        android:textSize="15dp"
        android:typeface="serif"
        android:layout_toRightOf="@+id/desText"/>


    <TextView
        android:id="@+id/desText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:text="Description: "
        android:typeface="serif"
        android:textSize="15dp"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/postButton"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/postButton"
        style="@style/btnStyleShakespeare"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="@string/post"/>

</RelativeLayout>